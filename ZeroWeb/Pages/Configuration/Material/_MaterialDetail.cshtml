﻿<div class="modal" id="modalMaterialDetail" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Material Detail</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row" style="height:100%">
                    <div class="col-md-12" style="height:100%">
                        <div class="card accordion">
                            <div class="card-body">
                                <div class="form-group row">
                                    <label class="col-md-4 mt-2 text-end">Material ID:</label>
                                    <div class="col-md-8">
                                        <div class="input-group">
                                            <input type="text" class="form-control" id="txtMaterialId_Detail" />
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-4 mt-2 text-end">Material Code:</label>
                                    <div class="col-md-8">
                                        <div class="input-group">
                                            <input type="text" class="form-control" id="txtMaterialCode_Detail" />
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-4 mt-2 text-end">Description:</label>
                                    <div class="col-md-8">
                                        <div class="input-group">
                                            <input type="text" class="form-control" id="txtDescription_Detail" />
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-4 mt-2 text-end">Unit</label>
                                    <div class="col-md-8">
                                        <select class="select2 form-select shadow-none" style="width: 100%; height: 36px" id="ddlUnit_Detail">
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-4 mt-2 text-end">Unit Exchange</label>
                                    <div class="col-md-8">
                                        <select class="select2 form-select shadow-none" style="width: 100%; height: 36px" id="ddlUnitExchange_Detail">
                                        </select>
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <label class="col-md-4 mt-2 text-end">Exchange:</label>
                                    <div class="col-md-8">
                                        <div class="input-group">
                                            <input type="text" class="form-control" id="txtExchange_Detail" />
                                        </div>
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <label class="col-md-4 mt-2 text-end">Inspection Type</label>
                                    <div class="col-md-8">
                                        <select class="select2 form-select shadow-none" style="width: 100%; height: 36px" id="ddlInspectionType_Detail">
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-4 mt-2 text-end">Active:</label>
                                    <div class="col-md-8 mt-2">
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input" id="cbIsActive_Detail" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAddNew_Detail">Add New</button>
                <button type="button" class="btn btn-primary" id="btnUpdate_Detail">Update</button>
                <button type="button" class="btn btn-secondary" id="btnClear_Detail">Clear</button>
                <button type="button" class="btn btn-dark" data-bs-dismiss="modal" id="btnClose_Detail">Close</button>
            </div>
        </div>
    </div>
</div>
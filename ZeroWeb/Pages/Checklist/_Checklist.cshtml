@using ZeroWeb.Models.SharedObjects
@model ChecklistItem // thay bằng đúng kiểu item trong Items

@{
    string ro = "";
    if (Model.Conclusion == "Pass") ro = "readonly";

}


<div class="card-body" style="overflow: auto">
    <div class="card-title">Checklist Information/Thông tin checklist</div>
    <div class="form-group row">
        <label class="col-md-4 mt-2 text-end">Date/ Ngày:</label>
        <div class="col-md-8">
            <div class="input-group">
                <input type="text" class="form-control" id="txtDate" value="@Model.DateCheck" readonly/>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-4 mt-2 text-end">Week/ Tuần:</label>
        <div class="col-md-8">
            <div class="input-group">
                <input type="text" class="form-control" id="txtWeekCheck" value="@Model.WeekCheck" readonly />
            </div>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-4 mt-2 text-end">Material Code/ Mã vật tư:</label>
        <div class="col-md-8">
            <div class="input-group">
                <input type="text" class="form-control" id="txtMaterialCode" value="@Model.MaterialCode" readonly />
            </div>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-4 mt-2 text-end">Description:</label>
        <div class="col-md-8">
            <div class="input-group">
                <textarea class="form-control" id="txtDescription" style="height:100px" readonly>@Model.Description</textarea>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-4 mt-2 text-end">Supplier/ Nhà cung cấp:</label>
        <div class="col-md-8">
            <div class="input-group">
                <input type="text" class="form-control" id="txtSuppiler" value="@Model.Supplier" readonly />
            </div>
        </div>
    </div>
    
    <div class="form-group row">
        <label class="col-md-4 mt-2 text-end">PO#/ Số PO:</label>
        <div class="col-md-8">
            <div class="input-group">
                <input type="text" class="form-control" id="txtPO" value="@Model.PO" readonly />
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-4 mt-2 text-end">Quantity/ Số lượng WH Báo:</label>
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" class="form-control" id="txtQty" value="@Model.Qty" readonly />
            </div>
        </div>
        <div class="col-md-2 mt-2 text-start" style="font-weight: bold" id="divUnit">@Model.Unit</div>
    </div>


    <div class="form-group row">
        <label class="col-md-4 mt-2 text-end">Exchange Quantity/ Số lượng quy đổi:</label>
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" class="form-control" id="txtQtyExchange" value="@Model.QtyExchange" readonly />
            </div>
        </div>
        <div class="col-md-2 mt-2 text-start" style="font-weight: bold" id="divUnitExchange">@Model.UnitExchange</div>
    </div>

    <div class="form-group row">
        <label class="col-md-4 mt-2 text-end">Sample Quantity/ Số lượng Mẫu Kiểm:</label>
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" class="form-control" id="txtSample" value="@Model.SampleQty" readonly />
            </div>
        </div>
        <div class="col-md-2 mt-2 text-start" style="font-weight: bold" id="divUnitSample">@Model.UnitExchange</div>
    </div>

    <div class="form-group row">
        <label class="col-md-4 mt-2 text-end">Checker/ Người Kiểm:</label>
        <div class="col-md-8">
            <div class="input-group">
                <input type="text" class="form-control" id="txtChecker" value="@Model.Checker" @ro />
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-4 mt-2 text-end">Detail ID/ Mã ID WMS:</label>
        <div class="col-md-8">
            <div class="input-group">
                <input type="text" class="form-control" id="txtDetailId" value="@Model.DetailId" readonly />
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-4 mt-2 text-end">Conclusion/ Kết Luận:</label>
        <div class="col-md-8">
            <div class="input-group">
                <input type="text" class="form-control" id="txtConclusion" value="@Model.Conclusion" readonly />
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-4 mt-2 text-end">Note/ Ghi Chú:</label>
        <div class="col-md-8">
            <div class="input-group">
                <input type="text" class="form-control" id="txtNote" value="@Model.Note" @ro />
            </div>
        </div>
    </div>

</div>



<div class="border-top">
    <div class="card-body">
        @if (Model.Conclusion != "Pass")
        {
            <button type="button" class="btn btn-secondary btn-lg" id="btnPass">
                PASS
            </button>
            <button type="button" class="btn btn-primary btn-lg" id="btnHold">
                HOLD
            </button>
        }
    </div>
</div>